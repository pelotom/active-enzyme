{
  "name": "active-enzyme",
  "version": "3.0.1",
  "description": "Boilerplate-free Enzyme testing",
  "main": "index.js",
  "scripts": {
    "build": "babel --minified --source-maps -o index.js src/active-enzyme.js",
    "test": "jest --env=jsdom",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pelotom/active-enzyme.git"
  },
  "keywords": [
    "object",
    "property",
    "undefined",
    "proxy"
  ],
  "author": "Tom Crockett",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pelotom/active-enzyme/issues"
  },
  "homepage": "https://github.com/pelotom/active-enzyme#readme",
  "engines": {
    "node": ">=6.0.0"
  },
  "peerDependencies": {
    "enzyme": "^2.7.1",
    "react": "*"
  },
  "devDependencies": {
    "@types/enzyme": "^2.7.5",
    "babel-cli": "6.24.1",
    "babel-plugin-transform-class-properties": "^6.16.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "enzyme": "^2.7.1",
    "jest": "20.0.4",
    "jsdom": "11.1.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-test-renderer": "^15.6.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/(build|docs|node_modules)/"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.test)\\.js$",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
